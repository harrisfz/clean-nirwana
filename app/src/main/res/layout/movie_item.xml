<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:gravity="center|center_vertical" android:orientation="vertical"
    >

        <ImageView
            android:id="@+id/image_view_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false" android:scaleType="centerCrop"
            android:src="@drawable/img_poster" app:srcCompat="@drawable/img_poster"
            tools:srcCompat="@drawable/img_poster"/>
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end" android:gravity="bottom|center|center_vertical"
            android:maxLines="2"
            android:lines="2"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
        <TextView
            android:id="@+id/text_view_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:drawableStart="@drawable/ic_star_full"
            android:drawableLeft="@drawable/ic_star_full"
            android:gravity="bottom|center|center_vertical"
            android:maxLines="1"
            android:text="Rating"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>